  "components": {
    "schemas": {
      "Chamados": {
        "required": [
          "descricao",
          "prioridade",
          "status",
          "titulo",
          "usuarioID"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "usuarioID": {
            "type": "integer",
            "format": "int32"
          },
          "categoriaID": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "titulo": {
            "minLength": 1,
            "type": "string"
          },
          "descricao": {
            "minLength": 1,
            "type": "string"
          },
          "status": {
            "minLength": 1,
            "pattern": "Aberto|Em andamento|Aguardando resposta|Resolvido|Fechado|Concluído",
            "type": "string"
          },
          "prioridade": {
            "minLength": 1,
            "pattern": "Baixa|Média|Alta|Urgente",
            "type": "string"
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          },
          "dataAtualizacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "senha": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "senha": {
            "type": "string",
            "nullable": true
          },
          "papel": {
            "type": "string",
            "nullable": true
          },
          "nome": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "Insira o token JWT: Bearer {seu_token}",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
